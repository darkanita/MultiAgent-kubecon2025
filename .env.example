# ======================================
# Multi-Agent Travel System Configuration
# ======================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =====================================
# Azure Kubernetes Service (AKS)
# =====================================
# Public IP of your AKS LoadBalancer service
PUBLIC_IP=<YOUR-CLUSTER-PUBLIC-IP>

# Kubernetes namespace for the application
K8S_NAMESPACE=multiagent-microservices

# =====================================
# Azure OpenAI Configuration
# =====================================
# Your Azure OpenAI endpoint
# Format: https://<your-resource-name>.openai.azure.com/
AZURE_OPENAI_ENDPOINT=https://<YOUR-OPENAI-RESOURCE>.openai.azure.com/

# Your Azure OpenAI deployment name
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini

# Your Azure OpenAI API version
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# =====================================
# Azure Container Registry (ACR)
# =====================================
# Your ACR name (without .azurecr.io)
ACR_NAME=<YOUR-ACR-NAME>

# Full ACR URL
ACR_URL=${ACR_NAME}.azurecr.io

# =====================================
# Application Configuration
# =====================================
# Base URL for the application
BASE_URL=http://${PUBLIC_IP}

# A2A Server endpoint
A2A_ENDPOINT=${BASE_URL}/a2a

# =====================================
# Service URLs (when running locally)
# =====================================
# Currency agent service URL
CURRENCY_AGENT_URL=http://localhost:8001

# Activity agent service URL
ACTIVITY_AGENT_URL=http://localhost:8002

# Coordinator service URL
COORDINATOR_URL=http://localhost:8000

# =====================================
# Authentication (Optional)
# =====================================
# If using service principal for Azure authentication
# AZURE_CLIENT_ID=<your-client-id>
# AZURE_CLIENT_SECRET=<your-client-secret>
# AZURE_TENANT_ID=<your-tenant-id>

# If using managed identity (recommended for production)
# AZURE_USE_MANAGED_IDENTITY=true

# =====================================
# Development Settings
# =====================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable debug mode (not for production)
DEBUG_MODE=false

# =====================================
# External APIs
# =====================================
# Frankfurter API for currency conversion (default)
FRANKFURTER_API_URL=https://api.frankfurter.app

# =====================================
# Docker Image Configuration
# =====================================
# Image tag for deployments
IMAGE_TAG=latest

# Full image names
COORDINATOR_IMAGE=${ACR_URL}/multiagent-kubecon-microservices/coordinator:${IMAGE_TAG}
CURRENCY_AGENT_IMAGE=${ACR_URL}/multiagent-kubecon-microservices/currency-agent:${IMAGE_TAG}
ACTIVITY_AGENT_IMAGE=${ACR_URL}/multiagent-kubecon-microservices/activity-agent:${IMAGE_TAG}
